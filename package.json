{
  "name": "mirage",
  "version": "1.1.0",
  "scripts": {
    "ng": "ng",
    "docker": "docker.sh",

    "electron:preclean": "rm -rf electron/dist electron/app",
    "electron:build": "npx ng build -c electron-prod",
    "electron:setup": "touch electron/package.json && echo {} >> electron/package.json",
    "electron:package": "npx electron-packager electron Mirage --out electron/dist --platform=win32 --arch=x64 --asar --icon=electron/logo.ico",
    "electron:move": "cp -r electron/dist/Mirage-win32-x64 release",
    "electron:postclean": "rm -rf electron/package.json electron/app electron/dist",

    "cordova:build:angular": "ng build -c cordova-prod",
    "cordova:build:java": "cordova build android --release --prod",
    
    "android:preclean": "touch platforms/android/local.properties && rm platforms/android/local.properties",
    "android:apk:move": "cp platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk apk",
    "android:postclean": "rm apk/app-release-unsigned.apk",

    "docker:apk:sign": "/usr/lib/Android/build-tools/29.0.3/apksigner sign --out release/Mirage.apk --ks apk/keystore.jks --ks-pass pass:MaxTri2012 --key-pass pass:MaxTri2012 apk/app-release-unsigned.apk",

    "release:electron": "npm run electron:preclean && npm run electron:build && npm run electron:setup && npm run electron:package &&npm run electron:move && npm run electron:postclean",
    "release:android": "npm run cordova:build:angular && npm run android:preclean && npm run cordova:build:java && npm run android:apk:move && npm run docker:apk:sign && npm run android:postclean",

    "script:get": "touch game.script.js && rm game.script.js && wget -O game.script.js https://proxyconnection.touch.dofus.com/build/script.js",
    "script:get:beautified": "npm run script:get && js-beautify -r game.script.js",

    "start": "npm run android:preclean && npx ng build -c cordova-dev",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",

    "xxx": " rm -rf dist && npx electron-packager electron Mirage --out ./dist --platform=win32 --arch=x64 --asar --icon=./electron/logo.ico",
    "yyy": "rm -rf electron/www && cp -r ./www ./electron/app",
    "zzz": "npm run yyy && npm run xxx"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "9.0.0",
    "@angular/cdk": "9.0.0",
    "@angular/common": "9.0.0",
    "@angular/compiler": "9.0.0",
    "@angular/core": "9.0.0",
    "@angular/fire": "^5.4.2",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "9.0.0",
    "@angular/material": "^9.0.0",
    "@angular/platform-browser": "9.0.0",
    "@angular/platform-browser-dynamic": "9.0.0",
    "@angular/router": "9.0.0",
    "@datorama/akita": "^4.19.2",
    "cordova-android": "^8.1.0",
    "cordova-plugin-browsersync": "^1.1.0",
    "cordova-plugin-browsersync-gen2": "^1.1.7",
    "cordova-plugin-file": "^6.0.2",
    "cordova-plugin-indexeddb": "^0.1.2",
    "cordova-plugin-screen-orientation": "^3.0.2",
    "cordova-sqlite-storage": "^4.0.0",
    "electron": "^8.2.3",
    "es6-promise-plugin": "^4.2.2",
    "firebase": "^7.8.1",
    "rxjs": "6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.900.1",
    "@angular/cli": "9.0.1",
